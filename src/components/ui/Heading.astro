---
const headingOptions = {
  h1: "text-2xl md:text-3xl lg:text-4xl xl:text-5xl text-gradient-header flex items-center justify-center gap-2",
  h2: "text-xl md:text-2xl lg:text-3xl xl:text-4xl text-gradient-header flex items-center justify-center gap-2",
  h3: "text-lg md:text-xl lg:text-2xl xl:text-3xl text-gradient-header flex items-center justify-center gap-2",
  h4: "text-base md:text-lg lg:text-xl xl:text-2xl text-gradient-header flex items-center justify-center gap-2",
  h5: "text-sm md:text-base lg:text-lg xl:text-xl text-gradient-header flex items-center justify-center gap-2",
};

import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"h1"> {
  tag: keyof typeof headingOptions;
  size: keyof typeof headingOptions;
  icon?: string;
}

const { tag, size, icon, ...rest } = Astro.props;

const Tag = headingOptions[tag];
---

<Tag
  class:list={[
    "text-gradient-header flex items-center justify-center gap-2",
    headingOptions[size],
  ]}
  {...rest}
>
  {icon && <span class="material-symbols-outlined header-icon">{icon}</span>}
  <slot />
</Tag>
