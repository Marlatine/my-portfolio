---
interface Props {
  bordered?: boolean;
  class?: string;
}

const { bordered = false, class: className } = Astro.props;
---

<span
  class:list={[
    "rounded-full bg-(--color-primary) px-3 py-1 text-xs text-(--color-base-content)",
    bordered && "border border-(--color-secondary)",
    className,
  ]}
>
  <slot />
</span>
