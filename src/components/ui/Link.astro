---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  href: string;
  icon?: string;
  iconSize?: number;
  iconPosition?: "left" | "right";
}

const {
  href,
  class: className,
  icon,
  iconSize = 24,
  iconPosition = "left",
  ...rest
} = Astro.props;
---

<a
  href={href}
  class:list={[
    "text-base-content cursor-pointer text-lg flex items-center justify-center link-underline transition-all duration-300 hover:text-secondary",
    iconPosition === "left" && "gap-2",
    iconPosition === "right" && "flex-row-reverse gap-0",
    className,
  ]}
  {...rest}
>
  {
    icon && (
      <span
        class="material-symbols-outlined header-icon"
        style={`font-size: ${iconSize}px;`}
      >
        {icon}
      </span>
    )
  }
  <slot />
</a>

<style>
  .link-underline {
    position: relative;
  }
  .link-underline::after {
    content: "";
    position: absolute;
    left: 50%;
    bottom: -4px;
    width: 0;
    height: 2px;
    background-color: currentColor;
    transform: translateX(-50%);
    transition: width 0.3s ease;
  }
  .link-underline:hover::after {
    width: calc(100% + 8px);
  }
</style>
