---
import Card from "./ui/Card.astro";
import Button from "./ui/Button.astro";

const { project } = Astro.props;

const { image, title, description, href } = project.data;
---

<Card imageSrc={image.src} imageAlt={title} contentClass="bg-gradient-glow-top">
  <h2 class="text-xl text-base-content font-bold">{title}</h2>
  <p class="text-base md:text-lg lg:text-xl text-base-content/70 line-clamp-2">
    {description}
  </p>
  <div class="mt-auto w-full">
    <Button variant="primary" href={href} target="_blank" class="w-full">
      View project
    </Button>
  </div>
</Card>
